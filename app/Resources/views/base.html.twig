<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width">
        <title>{% block title %}Site Enquêtes{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script>
       <!-- Bootstrap -->
        {%block stylesheet%}
        <link href="{{asset('css/bootstrap.css')}}" rel="stylesheet">
        {%endblock%}
    </head>
    <body>
         {#{{render (controller("EnquetesMainBundle:Resultat:menu"))}}#}
        <header>
            <nav class="navbar navbar-default" role="navigation">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <a class="navbar-brand" href="#">Site Enquêtes</a>
              </div>
              <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">

                  <li>{{render (controller("EnquetesMainBundle:Resultat:menu"))}}</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li><a href='/utilisateur'>Mes enquêtes</a></li>
                 </ul>
                  <!-- ------------------------------------------------------------------------------------------------------->
{#                  lien vers mon compte lorsque l'on est connexion#}
                  {# On n'affiche le lien « Ajouter un article » qu'aux auteurs
                    (et admins, qui héritent du rôle auteur) #}
                  {% if is_granted('ROLE_USER') %}
                  <ul class="btn-group navbar-right" style="margin-bottom: 0;">
                      <div class="btn-group navbar-right">
                        <div class="btn-group">
                          <button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle btn btn-primary" data-toggle="dropdown">

                              <a style="color: #FFF;" class="navbar-brand" href="#">Votre compte</a>
                            <span class="caret"></span>

                          </button>
                          <ul class="dropdown-menu" role="menu" aria-labelledby="btnGroupDrop1">
                            <li><a href="/editioncompte">Modifier</a></li>
                            <li><a href="/supprimer">Supprimer</a></li>
                          </ul>
                        </div>
                      </div>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                    <li><a href="/logout">Deconnexion</a></li>
                  </ul>
                   {% endif %}
                  {# … #}
                  <!-- -----------------------------------------------Fin lien mon compte-------------------------------------------------------->
                  
                  
                  
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}
        
       <!--Footer-->
    <footer>
        <div></div>
    </footer>
    <!--fin Footer--> 
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- Insertion Fichiers JS -->
        <script src="https://code.jquery.com/jquery.js"></script>
        {%block javascript%}
        <script type="text/javascript" src="{{asset('js/bootstrap.js')}}"></script>
        {%endblock%}
    <!-- Fin insertion JS -->
    </body> 
</html>
